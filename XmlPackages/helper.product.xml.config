                        <xsl:for-each select="current()/ATTRIBUTE_ITEM" >
                          <option value="{current()/ITEM_ATTRIBUTE_CODE}">
                            <xsl:value-of select="current()/ITEM_ATTRIBUTE_DESCRIPTION" disable-output-escaping="yes" />
