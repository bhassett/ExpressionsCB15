                  {key : 'showproduct.aspx.27', value : '<xsl:value-of select="ise:StringResource('showproduct.aspx.27')"/>'},
                  {key : 'showproduct.aspx.28', value : '<xsl:value-of select="ise:StringResource('showproduct.aspx.28')"/>'},
                  {key : 'showproduct.aspx.37', value : '<xsl:value-of select="ise:StringResource('showproduct.aspx.37')"/>'},
                  {key : 'showproduct.aspx.38', value : '<xsl:value-of select="ise:StringResource('showproduct.aspx.38')"/>'},
                  {key : 'showproduct.aspx.45', value : '<xsl:value-of select="ise:StringResource('showproduct.aspx.45')"/>'},
                ],
                groups:[
                  <xsl:for-each select="FIELD/KitGroups/KitGroup">
                    {
                      id: <xsl:value-of select="current()/Id" />,
                      description: '<xsl:value-of select="current()/Description" />',
                      type: '<xsl:value-of select="current()/Type" />',
                      controlType: '<xsl:value-of select="current()/ControlType" />',
                      <xsl:if test="current()/NoneOptionShouldBeDefaultSelected">
                        noneOptionShouldBeDefaultSelected : Boolean('<xsl:value-of select="current()/NoneOptionShouldBeDefaultSelected" />'),
                      </xsl:if>
                      items:[
                        <xsl:for-each select="current()/KitItems/KitItem">
                          {
                            id : <xsl:value-of select="current()/Id" />,
                          },
                        </xsl:for-each>
                      ],
                    },
                  </xsl:for-each>
                ],
              });
             
              $add_windowLoad(kitItemOptions.init);
            </script>
          
          </xsl:when>

          <!-- DISPLAY_PRICING_LEVEL-->
          <xsl:when test="$SectionType='DISPLAY_PRICING_LEVEL'">
            <div id="pnlPricingLevel_{FIELD/Counter}" name="pnlPricingLevel_{FIELD/Counter}" >
              <div id="pnlPricingLevelInline_{FIELD/Counter}" name="pnlPricingLevelInline_{FIELD/Counter}" style="display:none;" ></div>
              <div id="pnlPricingLevelPopUp_{FIELD/Counter}" name="pnlPricingLevelPopUp_{FIELD/Counter}" style="display:none;" >
                <p>
                  <small>
                    <xsl:value-of select="ise:StringResource('showproduct.aspx.7')" />
                    <a id="lnkPricingLevelPopUp_{FIELD/Counter}" href="javascript:void(0);" >
                      <xsl:value-of select="ise:StringResource('showproduct.aspx.8')" />
                    </a>
                  </small>
                </p>
              </div>
            </div>
            <script type="text/javascript">
             
              $add_windowLoad(function() {
              ise.StringResource.registerString('showproduct.aspx.7', '<xsl:value-of select="ise:StringResource('showproduct.aspx.7')" />');

              var product = ise.Products.ProductController.getProduct(<xsl:value-of select="FIELD/Counter" />);
              var ctrl = new ise.Products.PricingLevelControl(<xsl:value-of select="FIELD/Counter" />, 'pnlPricingLevel_<xsl:value-of select="FIELD/Counter" />');
              ctrl.setShowInline(<xsl:value-of select="FIELD/ShowInline" />);
              ctrl.setBackColor('<xsl:value-of select="FIELD/LightCellColor" />');
              ctrl.setProduct(product);
              });
            </script>
          </xsl:when>

          <!-- DISPLAY_STOCK_HINT-->
          <xsl:when test="$SectionType='DISPLAY_STOCK_HINT'">
            <xsl:variable name="Counter" select="FIELD/Counter"/>
            <xsl:variable name="ShowStockHints" select="FIELD/ShowStockHints"/>
            <xsl:variable name="ShowActualInventory" select="FIELD/ShowActualInventory"/>
            <div id="pnlStockHint_{$Counter}" class="col-md-12 col-sm-12 col-xs-12" name="pnlStockHint_{$Counter}">
              <xsl:choose>
                <xsl:when test="$ShowStockHints = 'true'">
                  <img id="imgStockHint_{$Counter}" />
                  <div id="spanStockHint_{$Counter}" class="badge"></div>
                  <div id="lblStockHint_{$Counter}" style="display: none"></div>
                </xsl:when>
                <xsl:when test="$ShowActualInventory = 'true'">
                <img id="imgStockHint_{$Counter}" />
                <div id="spanStockHint_{$Counter}" class="badge"></div>
                <div id="lblStockHint_{$Counter}" style="display: none"></div>
                </xsl:when>
                <xsl:otherwise></xsl:otherwise>
              </xsl:choose>
            </div>
            
            <script type="text/javascript" language="Javascript" >
              $add_windowLoad(function(){
                ise.StringResource.registerString('showproduct.aspx.90', '<xsl:value-of select="ise:StringResource('showproduct.aspx.90')" />');
                ise.StringResource.registerString('showproduct.aspx.91', '<xsl:value-of select="ise:StringResource('showproduct.aspx.91')" />');
                ise.StringResource.registerString('showproduct.aspx.46', '<xsl:value-of select="ise:StringResource('showproduct.aspx.46')" />');
                ise.StringResource.registerString('showproduct.aspx.47', '<xsl:value-of select="ise:StringResource('showproduct.aspx.47')" />');
              
                var product = ise.Products.ProductController.getProduct(<xsl:value-of select="$Counter" />);
                var ctrlStockHint = new ise.Products.StockHintControl(<xsl:value-of select="$Counter" />, 'imgStockHint_<xsl:value-of select="$Counter" />', 'images/instock.png', 'images/outofstock.png');
                ctrlStockHint.setProduct(product);
              });
            </script>

           
          </xsl:when>

          <!-- DISPLAY_PRODUCT_IMAGE-->
          <xsl:when test="$SectionType='DISPLAY_PRODUCT_IMAGE'">
            <xsl:variable name="SkinID" select="FIELD/SkinID"/>
            <xsl:variable name="UseImagesForMultiNav" select="FIELD/UseImagesForMultiNav"/>
            <xsl:variable name="UseRolloverForMultiNav" select="FIELD/UseRolloverForMultiNav"/>
            <xsl:variable name="Counter" select="FIELD/Counter"/>
            <xsl:variable name="ItemCode" select="FIELD/ItemCode"/>
            <xsl:variable name="ItemType" select="FIELD/ItemType"/>
            <xsl:variable name="ImageAttributes" select="FIELD/ImageAttributes"/>
            <xsl:variable name="ImageAttributeByObject" select="FIELD/ImageAttributeByObject"/>
            <xsl:variable name="Matrix" select="FIELD/Matrix"/>
            <xsl:variable name="DefaultSize" select="'MEDIUM'"/>
            <xsl:variable name="DefaultMultipleImageCount" select="number(10)"/>
            
            <script type="text/javascript" language="Javascript">
              var imgTitleArray<xsl:value-of select="$Counter" /> = new Array();
              <xsl:for-each select="$ImageAttributes/ImageAttribute">
                imgTitleArray<xsl:value-of select="$Counter" />.push('<xsl:value-of select="current()/Title" />');
              </xsl:for-each>
            </script>

            <div id="pnlImage_{$Counter}"  align="center">
              <a id="lnkLarge_{$Counter}" class="cloud-zoom">
                <xsl:choose>
                  <xsl:when test="$DefaultSize = 'ICON'">
                    <img alt="{$ImageAttributeByObject/IconAlt}" title="{$ImageAttributeByObject/IconTitle}" data-contentKey="{$ItemCode}"  data-contentEntityType="product" data-contentCounter="{$Counter}" data-contentType="image" class="product-image-for-matrix-options content" id="imgProduct_{$Counter}"  />
                  </xsl:when>
                  <xsl:when test="$DefaultSize = 'MEDIUM'">
                    <img alt="{$ImageAttributeByObject/MediumAlt}" title="{$ImageAttributeByObject/MediumTitle}" data-contentKey="{$ItemCode}"  data-contentEntityType="product" data-contentCounter="{$Counter}" data-contentType="image" class="product-image-for-matrix-options content" id="imgProduct_{$Counter}"  />
                  </xsl:when>
                  <xsl:when test="$DefaultSize = 'LARGE'">
                    <img alt="{$ImageAttributeByObject/LargeAlt}" title="{$ImageAttributeByObject/LargeTitle}" data-contentKey="{$ItemCode}"  data-contentEntityType="product" data-contentCounter="{$Counter}" data-contentType="image" class="product-image-for-matrix-options content" id="imgProduct_{$Counter}"  />
                  </xsl:when>
                </xsl:choose>
              </a>
              <br/>

              <div id="pnlImageMultiples_{$Counter}" class="image-pager" >
                <xsl:for-each select="(//node())[$DefaultMultipleImageCount >= position()]">
                  <xsl:choose>
                    <xsl:when test="$DefaultSize = 'ICON'">
                      <img id="imgMultiple_{$Counter}_{position()-1}" style="display:none;cursor:hand;cursor:pointer;" border="0" alt="{$ImageAttributeByObject/IconAlt}" title="{$ImageAttributeByObject/IconTitle}" />
                    </xsl:when>
                    <xsl:when test="$DefaultSize = 'MEDIUM'">
                      <img id="imgMultiple_{$Counter}_{position()-1}" style="display:none;cursor:hand;cursor:pointer; width: 40px;" border="0" alt="{$ImageAttributeByObject/MediumAlt}" title="{$ImageAttributeByObject/MediumTitle}" />
                    </xsl:when>
                    <xsl:when test="$DefaultSize = 'LARGE'">
                      <img id="imgMultiple_{$Counter}_{position()-1}" style="display:none;cursor:hand;cursor:pointer;" border="0" alt="{$ImageAttributeByObject/LargeAlt}" title="{$ImageAttributeByObject/LargeTitle}" />
                    </xsl:when>
                  </xsl:choose>
                </xsl:for-each>
              </div>
            </div>
            <br/>

            <xsl:if test="$ItemType = 'Matrix Group' and $Matrix">
              <div id="pnlImageSwatch_{$Counter}">
                <table id="tblImageSwatch_{$Counter}" border="0" cellspacing="{$Matrix/SwatchSpacing}">
                  <xsl:for-each select="$Matrix/MatrixImageAttributes">
                    <tr>
                      <xsl:for-each select="current()/MatrixImageAttribute">
                        <td>
                          <xsl:choose>
                            <xsl:when test="$DefaultSize = 'ICON'">
                              <img id="imgSwatch_{$Counter}_{current()/Counter}" style="cursor:hand;cursor:pointer;" alt="{$ImageAttributeByObject/IconAlt}" title="{$ImageAttributeByObject/IconTitle}" />
                            </xsl:when>
                            <xsl:when test="$DefaultSize = 'MEDIUM'">
                              <img id="imgSwatch_{$Counter}_{current()/Counter}" style="cursor:hand;cursor:pointer; width: 40px;" alt="{$ImageAttributeByObject/MediumAlt}" title="{$ImageAttributeByObject/MediumTitle}" />
                            </xsl:when>
                            <xsl:when test="$DefaultSize = 'LARGE'">
                              <img id="imgSwatch_{$Counter}_{current()/Counter}" style="cursor:hand;cursor:pointer;" alt="{$ImageAttributeByObject/LargeAlt}" title="{$ImageAttributeByObject/LargeTitle}" />
                            </xsl:when>
                          </xsl:choose>
                        </td>
                      </xsl:for-each>
                    </tr>
                  </xsl:for-each>
                </table>
              </div>
            </xsl:if>

            <script type="text/javascript" language="Javascript">
              $add_windowLoad(function(){
                var counter = <xsl:value-of select="$Counter" />;
                var product = ise.Products.ProductController.getProduct(counter);
                var imageControl = new ise.Products.ImageControl(counter, 'imgProduct_' + counter.toString());
                imageControl.setProduct(product);
                imageControl.setUseMicroImages(<xsl:value-of select="$UseImagesForMultiNav" />);
                imageControl.setHandleHover(<xsl:value-of select="$UseRolloverForMultiNav" />);
                
                <xsl:for-each select="(//node())[$DefaultMultipleImageCount >= position()]">
                   
                  var imgMul_<xsl:value-of select="position()-1"/> = new ise.Products.ImageMultipleControl('imgMultiple_' + counter.toString() + '_<xsl:value-of select="position()-1"/>', <xsl:value-of select="position()-1"/>, '<xsl:value-of select="concat('skins/skin_', $SkinID,'/images/im', position(),'.gif')"/>');
                  imageControl.registerMultipleControl(imgMul_<xsl:value-of select="position()-1"/>);
                  
                </xsl:for-each>
              
              var lnkLarge = new ise.Products.LargeImageLinkControl('lnkLarge_' + counter.toString());
              imageControl.setLargeImageControl(lnkLarge);
              
               <xsl:if test="$ItemType = 'Matrix Group' and $Matrix">
                <xsl:for-each select="$Matrix/MatrixImageAttributes">
                   
                      <xsl:for-each select="current()/MatrixImageAttribute">
                       
                         var imgSwatch_<xsl:value-of select="position()-1"/> = new ise.Products.ImageSwatchControl(<xsl:value-of select="current()/Counter"/>, 'imgSwatch_' + counter.toString() + '_<xsl:value-of select="current()/Counter"/>', '<xsl:value-of select="current()/ItemCodeURLEncoded"/>');
                        imageControl.registerSwatchControl(imgSwatch_<xsl:value-of select="position()-1"/>);
                      </xsl:for-each>
                   
                  </xsl:for-each>
              
       
            </xsl:if>
 imageControl.arrangeDisplay();
              });
            </script>



          </xsl:when>
          
           <!-- DISPLAY_PRODUCT_PRICE-->
          <xsl:when test="$SectionType='DISPLAY_PRODUCT_PRICE'">
            <xsl:variable name="IsDisplayLabel" select="FIELD/IsDisplayLabel"/>
            <xsl:variable name="Counter" select="FIELD/Counter"/>
            
            <div id="pnlDisplayPrice_{$Counter}"></div>
            <script type="text/javascript">
              $(document).ready(function(){
              
              <xsl:choose>
                <xsl:when test="$IsDisplayLabel = 'true'">
                  ise.StringResource.registerString('showproduct.aspx.33', '<xsl:value-of select="ise:StringResource('showproduct.aspx.33')" />');
                </xsl:when>
                <xsl:otherwise>
                  ise.StringResource.registerString('showproduct.aspx.33', '');
                </xsl:otherwise>
              </xsl:choose>
              
                ise.StringResource.registerString('showproduct.aspx.34', '<xsl:value-of select="ise:StringResource('showproduct.aspx.34')" />');
                ise.StringResource.registerString('showproduct.aspx.37', '<xsl:value-of select="ise:StringResource('showproduct.aspx.37')" />');
                ise.StringResource.registerString('showproduct.aspx.38', '<xsl:value-of select="ise:StringResource('showproduct.aspx.38')" />');
                ise.StringResource.registerString('showproduct.aspx.47', '<xsl:value-of select="ise:StringResource('showproduct.aspx.47')" />');
                ise.StringResource.registerString('showproduct.aspx.63', '<xsl:value-of select="ise:StringResource('showproduct.aspx.63')" />');
                ise.StringResource.registerString('common.cs.20', '<xsl:value-of select="ise:StringResource('common.cs.20')" />');
                var counter = <xsl:value-of select="$Counter" />;
                var product = ise.Products.ProductController.getProduct(counter);
                var priceControl = new ise.Products.PriceControl(counter, 'pnlDisplayPrice_' + counter.toString());
                priceControl.setProductWithLabel(product, '<xsl:value-of select="$IsDisplayLabel" />');
                
                });
            </script>
          </xsl:when>

          <!-- DISPLAY_PROMOTIONAL_POPUP_ITEMS-->
          <xsl:when test="$SectionType='DISPLAY_PROMOTIONAL_POPUP_ITEMS'">
            <xsl:variable name="Counter" select="FIELD/Counter"/>
            <xsl:variable name="ItemCode" select="FIELD/ItemCode"/>
            
            <xsl:if test="count(FIELD/Items/Item) > 0">
              <div class="table-responsive">
                <table class="table">
                  <xsl:for-each select="FIELD/Items/Item">
                    <tr>
                      <xsl:choose>
                        <xsl:when test="current()/IsAny = 'true'">
                          <td>
                            <xsl:choose>
                              <xsl:when test="current()/IndexCounter &lt; 1">
                                <input type="radio" name="PromotionalPopUp" value="{current()/Counter}_{current()/RuleDetailId}" id="PromoPopUp_{current()/Counter}_{current()/RuleDetailId}" checked="checked">
                                  <xsl:value-of select="current()/Description" />
                                </input>
                              </xsl:when>
                              <xsl:otherwise>
                                <input type="radio" name="PromotionalPopUp" value="{current()/Counter}_{current()/RuleDetailId}" id="PromoPopUp_{current()/Counter}_{current()/RuleDetailId}">
                                  <xsl:value-of select="current()/Description" />
                                </input>
                              </xsl:otherwise>
                            </xsl:choose>
                          
                          </td>
                        </xsl:when>
                        <xsl:otherwise>
                          <td></td>
                        </xsl:otherwise>
                      </xsl:choose>

                      <td></td>

                      <td>
                        <xsl:value-of select="ise:DisplayImage('product',current()/Counter, 'icon', '', 'AltText', 'center', current()/ItemCode, true())" disable-output-escaping="yes" />
                      </td>

                      <td>
                        <input type="hidden" id="RuleDetailID_{current()/Counter}_{current()/RuleDetailId}" value="{current()/RuleDetailId}" />
                        <input type="hidden" id="PromoProductID_{current()/Counter}_{current()/RuleDetailId}" value="{current()/Counter}" />
                        <strong>
                          <xsl:value-of select="current()/ItemDescription" disable-output-escaping="yes" />
                        </strong>
                        <br/>
                        <xsl:value-of select="current()/WebDescription" disable-output-escaping="yes" />
                      </td>

                      <td  style="min-width:75px">
                        <strike>
                          <xsl:value-of select="current()/SalesPriceFormatted" disable-output-escaping="yes" />
                        </strike>
                        <br/>
                        <xsl:value-of select="current()/DiscountedPriceFormatted" disable-output-escaping="yes" />
                      </td>
                      
                      </tr>
                  </xsl:for-each>
                </table>
              </div>
            </xsl:if>

          </xsl:when>
          
          <xsl:otherwise>
        </xsl:otherwise>
        </xsl:choose>
      </xsl:template>

      <xsl:template name="ReviewList">
        <xsl:variable name="CustomerCode" select="FIELD/CUSTOMERCODE"></xsl:variable>
        <xsl:variable name="ContactCode" select="FIELD/CONTACTCODE"></xsl:variable>
        <xsl:variable name="IsRegistered" select="FIELD/CUSTOMER_REGISTERED" />
        <xsl:variable name="ItemCode" select="FIELD/ITEMCODE" />
        <xsl:choose>
          <!-- NoReviews -->
          <xsl:when test="count(FIELD/REVIEWS/REVIEW) = 0">
            <ul class="reviewlist">
              <li>No reviews yet</li>
            </ul>
          </xsl:when>
          <!-- WithReviews -->
          <xsl:otherwise>
            <ul class="reviewlist">
              <xsl:for-each select="FIELD/REVIEWS/REVIEW">
                <xsl:variable name="RevCustomerCode" select="current()/REVIEWER_CUSTOMERCODE" />
                <xsl:variable name="RevContactCode" select="current()/REVIEWER_CONTACTCODE" />
               
                <li>
                  <div class="review-header">
                    <span class="author">
                      <xsl:value-of select="concat(current()/FIRST_NAME, ' ', current()/LAST_NAME)"></xsl:value-of>
                    </span>
                    <span class="created">
                      <xsl:value-of select="current()/DATE_CREATED"></xsl:value-of>
                    </span>
                    <br />
                    <span class="ratings">
                      <xsl:value-of select="current()/RATING_STARS" disable-output-escaping="yes"></xsl:value-of>
                    </span>
                  </div>
                  <div class="review-body">
                      <xsl:value-of select="current()/COMMENT" disable-output-escaping="yes"></xsl:value-of>
                  </div>
                  <div class="review-footer">
                    <span class="like">
                      <!-- check if owner of comment -->
                      <xsl:if test="not($CustomerCode = $RevCustomerCode) and $IsRegistered = 'true'">
                        Was this review helpful?
                        <input type="button" class="ratecomment" value="Yes" onclick="ratecomment('{$ItemCode}','YES','{$CustomerCode}','{$ContactCode}','{$RevCustomerCode}', '{$RevContactCode}')"></input>
                        <input type="button" class="ratecomment" value="No" onclick="ratecomment('{$ItemCode}','NO','{$CustomerCode}','{$ContactCode}','{$RevCustomerCode}', '{$RevContactCode}')"></input>
                        <br />
                      </xsl:if>
                    </span>
                    <span class="helpful">
                      <xsl:value-of select="current()/HELPFUL_COUNT"></xsl:value-of> found this review helpful,
                      <xsl:value-of select="current()/NOTHELPFUL_COUNT"></xsl:value-of> did not
                      <br />
                    </span>
                  </div>

                  <!-- comment division -->
                  <xsl:if test="not(position() = last())">
                    <hr class="linebreak" />
                  </xsl:if>
                </li>
              </xsl:for-each>
            </ul>
          </xsl:otherwise>
        </xsl:choose>
        
      </xsl:template>
    </xsl:stylesheet>
    
  </PackageTransform>
</package>