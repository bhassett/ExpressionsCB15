                 <xsl:when test="/root/QueryString/entitytype = 'c'"><xsl:value-of select="/root/QueryString/cpagenum" /></xsl:when>
                 <xsl:when test="/root/QueryString/entitytype = 'd'"><xsl:value-of select="/root/QueryString/dpagenum" /></xsl:when>
