  <PackageTransform>
    <xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:ise="urn:ise" exclude-result-prefixes="ise">
      <xsl:output method="html" omit-xml-declaration="yes" />
      <xsl:param name="EntityName">
        <xsl:value-of select="/root/Runtime/EntityName" />
      </xsl:param>
      <xsl:param name="ShowInGrid">true</xsl:param>
      <xsl:param name="GridCols">4</xsl:param>
      <xsl:param name="LocaleSetting" select="/root/Runtime/LocaleSetting" />
      <xsl:param name="WebConfigLocaleSetting" select="/root/Runtime/WebConfigLocaleSetting" />
      <xsl:template match="/">
        <xsl:choose>
          <xsl:when test="$ShowInGrid = 'true'">
            <table border="0" cellpadding="0" cellspacing="4" width="100%">
						<xsl:apply-templates select="/root/EntityHelpers/*[name()=$EntityName]/child::Entity" />
            </table>
          </xsl:when>
          <xsl:otherwise>
						<xsl:apply-templates select="/root/EntityHelpers/*[name()=$EntityName]/child::Entity" />
          </xsl:otherwise>
        </xsl:choose>
      </xsl:template>
      <xsl:template match="Entity">
        <xsl:param name="scName">
          <xsl:choose>
            <xsl:when test="count(Name/ml/locale[@name=$LocaleSetting])!=0">
              <xsl:value-of select="Name/ml/locale[@name=$LocaleSetting]" />
            </xsl:when>
            <xsl:when test="count(Name/ml/locale[@name=$WebConfigLocaleSetting]) !=0 ">
              <xsl:value-of select="Name/ml/locale[@name=$WebConfigLocaleSetting]" />
            </xsl:when>
            <xsl:when test="count(Name/ml)=0">
              <xsl:value-of select="Name" />
            </xsl:when>
          </xsl:choose>
        </xsl:param>
        <xsl:choose>
          <xsl:when test="$ShowInGrid = 'true'">
            <xsl:if test="position() mod $GridCols = 1">
              <tr>
                <xsl:for-each select=". | following-sibling::*[position() &lt; $GridCols]">
                  <xsl:call-template name="EntityCell">
                  </xsl:call-template>
                </xsl:for-each>
              </tr>
              <tr>
                <td height="10" colspan="{$GridCols}">&#0160;</td>
              </tr>
            </xsl:if>
          </xsl:when>
          <xsl:otherwise>
            &#0160;&#0160;&#0160;<img border="0" src="{concat('skins/skin_', ise:SkinID, '/images/redarrow.gif')}" />
              <img src="images/spacer.gif" width="5" height="1" />
              <a href="{ise:EntityLink(EntityID, SEName, $EntityName, 0, '')}">
                <xsl:value-of select="$scName" disable-output-escaping="yes" />
              </a>
			  <br>
				  <br></br>
			  </br>
          </xsl:otherwise>
        </xsl:choose>
      </xsl:template>
      <xsl:template name="EntityCell">
        <xsl:param name="scName">
          <xsl:choose>
            <xsl:when test="count(Name/ml/locale[@name=$LocaleSetting])!=0">
              <xsl:value-of select="Name/ml/locale[@name=$LocaleSetting]" />
            </xsl:when>
            <xsl:when test="count(Name/ml/locale[@name=$WebConfigLocaleSetting]) !=0 ">
              <xsl:value-of select="Name/ml/locale[@name=$WebConfigLocaleSetting]" />
            </xsl:when>
            <xsl:when test="count(Name/ml)=0">
              <xsl:value-of select="Name" />
            </xsl:when>
          </xsl:choose>
        </xsl:param>
        <xsl:param name="URL">
          <xsl:value-of select="ise:EntityLink(EntityID, SEName, $EntityName, 0, '')" />
        </xsl:param>
        <td align="center">
          <a href="{$URL}">
            <xsl:value-of select="ise:LookupEntityImage(EntityID, $EntityName, 'icon', 0)" disable-output-escaping="yes" />
          </a>
          <br />
          <a href="{$URL}">
            <xsl:value-of select="$scName" disable-output-escaping="yes" />
          </a>
        </td>
      </xsl:template>
    </xsl:stylesheet>
  </PackageTransform>
  <SearchEngineSettings>
    <SectionTitle actionType="transform">
      <xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:ise="urn:ise">
        <xsl:output method="html" omit-xml-declaration="yes" />
        <xsl:param name="LocaleSetting" select="/root/Runtime/LocaleSetting" />
        <xsl:param name="WebConfigLocaleSetting" select="/root/Runtime/WebConfigLocaleSetting" />
        <xsl:param name="EntityName">
          <xsl:value-of select="/root/Runtime/EntityName" />
        </xsl:param>
        <xsl:param name="EntityACName">
          AppConfig.<xsl:value-of select="$EntityName" />PromptPlural
        </xsl:param>
        <xsl:param name="EntityDisplayName">
          <xsl:value-of select="ise:StringResource($EntityACName, $LocaleSetting)" />
        </xsl:param>
        <xsl:template match="/">
          All <xsl:value-of select="$EntityDisplayName" />
        </xsl:template>
      </xsl:stylesheet>
    </SectionTitle>
  </SearchEngineSettings>
</package>
